<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The example shows you that you can use fallback images (in resources) in case if your image can&apos;t be loaded from Internet" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image with valid URL:" />

    <ImageView
        android:id="@+id/$validURL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="ic_launcher"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image with invalid URL:" />

    <ImageView
        android:id="@+id/$invalidURL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="ic_launcher"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id of your image you should put into your ImageView&apos;s tag. Without &quot;@id/drawable&quot;. For instance: &quot;ic_launcher&quot;." />

</LinearLayout>
